@import motion.lsg



@css {

  header {
    padding: 20px;
  }

  header .logo {
    max-width: 25%;
    margin-right: 20px;
    float: left;
  }

  .lsg-example {
    max-width: 1200px;
    width: 100%;
  }

  .lsg-code-block {
    overflow-x: scroll;
  }

  .lsg-code-block {
    background-color: white;
    border: 1px solid $base-background-color;
  }

  .lsg-html {
    background-color: $base-background-color;
  }

  .lsg-color-swatches .lsg-color-swatch {
    height: 200px;
    padding-top: 120px;
    width: 200px;
  }
}
