<!-- @require bourbon -->
@scss base.scss
@title Employer Pattern Library

@style font-family: Lato
@style font-size: 16px
@style sub-headeline-font-size: 26px
@style sub-sub-headeline-font-size: 20px

@style width: 1200px
@style color-swatch-border-radius: 40%

@header {
  <header>
    <img class="logo" src="images/logo--cb--color.svg" alt="CareerBuilder Logo">
    <h1>CB Employer Pattern Library</h1>
  </header>
}


